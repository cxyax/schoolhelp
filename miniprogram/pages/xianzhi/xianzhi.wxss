page {
  padding: 30rpx 0;
}

.box {
  border-radius: 20rpx;
  padding: 3vw;
  background-color: white;
  width: 84vw;
  margin: auto;
  margin-bottom: 30rpx;
  box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.2);
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bolder;
  line-height: 60rpx;
}

.price {
  line-height: 60rpx;
  color: red;
}

.line {
  margin: 10rpx 0;
  position: relative;
  left: -3vw;
  width: 90vw;
  border: 1rpx grey solid;
}

.info {
  width: 100%;
  line-height: 40rpx;
  overflow: hidden;
  text-align: justify;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.img_box {
  white-space: nowrap;
  margin: 20rpx 0;
}

.img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
  border: 5rpx black solid;
}

.box_bottom {
  margin: 10rpx 0 0 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.delete {
  color: red;
}

.time {
  text-align: right;
  margin-right: 10rpx;
  color: grey;
  font-size: 20rpx;
}

.send {
  width: 300rpx;
  height: 100rpx;
  position: fixed;
  margin: auto;
  bottom: 80rpx;
  right: 0;
  left: 0;
}

.send:active {
  width: 262.5rpx;
  height: 87.5rpx;
  position: fixed;
  margin: auto;
  bottom: 86.25rpx;
  right: 0;
  left: 0;
}
